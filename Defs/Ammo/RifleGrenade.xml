<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingCategoryDef>
		<defName>AmmoRifleGrenades</defName>
		<label>Rifle Grenade</label>
		<parent>AmmoGrenades</parent>
		<iconPath>UI/Icons/ThingCategories/CaliberGrenade</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_RifleGrenade</defName>
		<label>Rifle Grenades</label>
		<ammoTypes>
			<Ammo_RifleGrenade_HE>Bullet_RifleGrenade_HE</Ammo_RifleGrenade_HE>
			<Ammo_RifleGrenade_HEAT>Bullet_RifleGrenade_HEAT</Ammo_RifleGrenade_HEAT>
			<Ammo_RifleGrenade_EMP>Bullet_RifleGrenade_EMP</Ammo_RifleGrenade_EMP>
			<Ammo_RifleGrenade_Smoke>Bullet_RifleGrenade_Smoke</Ammo_RifleGrenade_Smoke>
		</ammoTypes>
		<similarTo>AmmoSet_LauncherGrenade</similarTo>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="RifleGrenadeBase" ParentName="MediumAmmoBase" Abstract="True">
		<description>Launched with blank cartridges from rifles with muzzle adaptor.</description>
		<statBases>
			<Mass>0.75</Mass>
			<Bulk>3.5</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>AmmoRifleGrenades</li>
		</thingCategories>
		<stackLimit>500</stackLimit>
		<cookOffFlashScale>100</cookOffFlashScale>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="RifleGrenadeBase">
		<defName>Ammo_RifleGrenade_HE</defName>
		<label>rifle grenade (HE)</label>
		<graphicData>
			<texPath>Weapons/Munitions/TA_RifleGrenade/HE</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<ammoClass>GrenadeHE</ammoClass>
		<detonateProjectile>Bullet_RifleGrenade_HE</detonateProjectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="RifleGrenadeBase">
		<defName>Ammo_RifleGrenade_HEAT</defName>
		<label>rifle grenade (HEAT)</label>
		<graphicData>
			<texPath>Weapons/Munitions/TA_RifleGrenade/HEAT</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<ammoClass>RocketHEAT</ammoClass>
		<detonateProjectile>Bullet_RifleGrenade_HE</detonateProjectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="RifleGrenadeBase">
		<defName>Ammo_RifleGrenade_EMP</defName>
		<label>rifle grenade (EMP)</label>
		<graphicData>
			<texPath>Weapons/Munitions/TA_RifleGrenade/EMP</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<ammoClass>GrenadeEMP</ammoClass>
		<generateAllowChance>0.5</generateAllowChance>
		<detonateProjectile>Bullet_RifleGrenade_EMP</detonateProjectile>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="RifleGrenadeBase">
		<defName>Ammo_RifleGrenade_Smoke</defName>
		<label>rifle grenade (Smoke)</label>
		<graphicData>
			<texPath>Weapons/Munitions/TA_RifleGrenade/SMK</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<ammoClass>Smoke</ammoClass>
		<generateAllowChance>0</generateAllowChance>
		<detonateProjectile>Bullet_RifleGrenade_Smoke</detonateProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="BaseRifleGrenadeBullet" ParentName="BaseExplosiveBullet" Abstract="true">
		<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(0.7,0.7)</drawSize>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>25</speed>
			<gravityFactor>2</gravityFactor>
			<dropsCasings>true</dropsCasings>
			<casingMoteDefname>Fleck_GrenadeLauncherAmmoCasings</casingMoteDefname>
			<casingFilthDefname>Filth_GrenadeLauncherAmmoCasings</casingFilthDefname>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseRifleGrenadeBullet">
		<defName>Bullet_RifleGrenade_HE</defName>
		<label>rifle grenade (HE)</label>
		<graphicData>
			<texPath>Weapons/Munitions/TA_RifleGrenade/projectile_HE</texPath>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bomb</damageDef>
			<damageAmountBase>75</damageAmountBase>
			<explosionRadius>2.0</explosionRadius>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Small>50</Fragment_Small>
				</fragments>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="BaseRifleGrenadeBullet">
		<defName>Bullet_RifleGrenade_HEAT</defName>
		<thingClass>CombatExtended.BulletCE</thingClass>
		<label>rifle grenade (HEAT)</label>
		<graphicData>
			<texPath>Weapons/Munitions/TA_RifleGrenade/projectile_HEAT</texPath>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<damageAmountBase>210</damageAmountBase> <!--made up warhead similar size to M72-->
			<armorPenetrationSharp>275</armorPenetrationSharp>
			<armorPenetrationBlunt>23</armorPenetrationBlunt>
			<effectiveRangeMultiplier>0.5</effectiveRangeMultiplier>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<damageAmountBase>75</damageAmountBase>
				<explosiveDamageType>Bomb</explosiveDamageType>
				<explosiveRadius>1</explosiveRadius>
				<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
			</li>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Large>1</Fragment_Large>
					<Fragment_Small>4</Fragment_Small>
				</fragments>
			</li>
		</comps>
	</ThingDef>

	<ThingDef ParentName="BaseRifleGrenadeBullet">
		<defName>Bullet_RifleGrenade_EMP</defName>
		<label>rifle grenade (EMP)</label>
		<graphicData>
			<texPath>Weapons/Munitions/TA_RifleGrenade/projectile_EMP</texPath>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>EMP</damageDef>
			<damageAmountBase>75</damageAmountBase>
			<explosionRadius>3</explosionRadius>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseRifleGrenadeBullet">
		<defName>Bullet_RifleGrenade_Smoke</defName>
		<label>rifle grenade (Smoke)</label>
		<graphicData>
			<texPath>Weapons/Munitions/TA_RifleGrenade/projectile_SMK</texPath>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Smoke</damageDef>
			<explosionRadius>4</explosionRadius>
			<suppressionFactor>0.0</suppressionFactor>
			<dangerFactor>0.0</dangerFactor>
			<postExplosionGasType>BlindSmoke</postExplosionGasType>
			<preExplosionSpawnChance>1</preExplosionSpawnChance>
		</projectile>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="LauncherAmmoRecipeBase">
		<defName>MakeAmmo_RifleGrenade_HE</defName>
		<label>make rifle grenade HE grenades x100</label>
		<description>Craft 100 rifle grenade HE grenades.</description>
		<jobString>Making rifle grenade HE grenades.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>8</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>FSX</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_RifleGrenade_HE>100</Ammo_RifleGrenade_HE>
		</products>
		<workAmount>9400</workAmount>
	</RecipeDef>

