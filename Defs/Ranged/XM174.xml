<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ==================== XM174 ==================== -->

 <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>TA_XM174MGL</defName>
    <label>XM174</label>
    <description>Lightweight 40mm automatic grenade launcher.</description>
    <graphicData>
      <texPath>Weapons/Ranged/TA_XM174</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
        <DrawSize>1.0,1.0</DrawSize>
        <DrawOffset>0.25,0.0</DrawOffset>
      </li>
    </modExtensions>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>29000</WorkToMake>
      <SightsEfficiency>1.0</SightsEfficiency>
      <ShotSpread>0.17</ShotSpread>
      <SwayFactor>1.65</SwayFactor>
      <Bulk>8.12</Bulk>
      <Mass>7.25</Mass>
      <RangedWeapon_Cooldown>0.37</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>65</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>	
    <weaponTags>
      <li>GunHeavy</li>
      <li>GunGrenadeLauncher</li>
      <li>GrenadeEMP</li>
      <li>CE_AI_SMOKE</li>
      <li>CE_AI_AOE</li>	  
      </weaponTags>
    <weaponClasses>
      <li>RangedHeavy</li>	
    </weaponClasses>	
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
      <recoilAmount>2.04</recoilAmount>		  
      <verbClass>CombatExtended.Verb_ShootCE</verbClass>
      <hasStandardCommand>true</hasStandardCommand>
      <defaultProjectile>Bullet_40x46mmGrenade_HE</defaultProjectile>
      <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
      <warmupTime>1.3</warmupTime>
      <range>48</range>
      <minRange>5</minRange>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
      <soundCast>InfernoCannon_Fire</soundCast>
      <muzzleFlashScale>6</muzzleFlashScale>
      <ignorePartialLoSBlocker>true</ignorePartialLoSBlocker>
      </li>
    </verbs>
		<comps Inherit="False">
			<li Class="CompProperties_Forbiddable"/>
			<li>
				<compClass>CompEquippable</compClass>
			</li>
			<li Class="CompProperties_Styleable"/>
			<li Class="CompProperties_Biocodable"/>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>12</magazineSize>		
        <reloadTime>4.9</reloadTime>
        <ammoSet>AmmoSet_40x46mmGrenade</ammoSet>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiUseBurstMode>true</aiUseBurstMode>
        <aiAimMode>SuppressFire</aiAimMode>
      </li>
		</comps>
    <recipeMaker>
      <researchPrerequisite>CE_Launchers</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>	  
    </recipeMaker>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>muzzle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
      </li>
    </tools>
  </ThingDef>
  
</Defs>
