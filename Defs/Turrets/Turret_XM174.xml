<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== XM174 ==================== -->

  <ThingDef ParentName="BaseTurretGun">
    <defName>TA_XM174MGL_mounted</defName>
    <label>XM174</label>
    <graphicData>
      <texPath>Building/Security/TA_XM174_mounted</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>Lightweight 40mm automatic grenade launcher.</description>
    <statBases>
      <SightsEfficiency>1.00</SightsEfficiency>
      <ShotSpread>0.17</ShotSpread>
      <SwayFactor>0.91</SwayFactor>
      <RangedWeapon_Cooldown>0.36</RangedWeapon_Cooldown>
      <Mass>20</Mass>
    </statBases>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <recoilAmount>1.04</recoilAmount>
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_40x46mmGrenade_HE</defaultProjectile>
        <warmupTime>1.3</warmupTime>
        <range>48</range>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>6</muzzleFlashScale>
        <recoilPattern>Mounted</recoilPattern>
		<targetParams>
			<canTargetLocations>true</canTargetLocations>
		</targetParams>
      </li>
    </verbs>
	<modExtensions>
	  <li Class="CombatExtended.GunDrawExtension">
			<DrawSize>1.0,1.0</DrawSize>
			<DrawOffset>0.00,-0.00</DrawOffset>
	  </li>		  
	</modExtensions>	
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>12</magazineSize>
        <reloadTime>4.9</reloadTime>
        <ammoSet>AmmoSet_40x46mmGrenade</ammoSet>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aimedBurstShotCount>2</aimedBurstShotCount>
        <aiAimMode>SuppressFire</aiAimMode>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="TurretMannedBuildableBase">
    <defName>TA_Turret_XM174MGL</defName>
    <label>XM174</label>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <graphicData>
      <texPath>Building/Security/TA_XM174_base</texPath>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <uiIconPath>Building/Security/TA_XM174_ico</uiIconPath>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>100</WorkToBuild>
      <Mass>8.12</Mass>
      <Bulk>15</Bulk>
    </statBases>
    <description>Lightweight 40mm automatic grenade launcher.</description>
    <costList>
      <TA_XM174MGL>1</TA_XM174MGL>
    </costList>
    <building>
      <turretGunDef>TA_XM174MGL_mounted</turretGunDef>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretBurstCooldownTime>0.36</turretBurstCooldownTime>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>CE_Launchers</li>
    </researchPrerequisites>
    <minifiedDef>MinifiedThing</minifiedDef>
  </ThingDef>  

</Defs>
