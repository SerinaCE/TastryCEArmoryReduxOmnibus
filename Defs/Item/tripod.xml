<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>TA_Tripod</defName>
    <label>tripod</label>
    <description>Tripod to set up machine guns on.</description>
    <graphicData>
      <texPath>Building/Security/TA_tripod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>20</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>30</MarketValue>
      <Mass>6.35</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>

	<RecipeDef ParentName="GrenadeRecipeBase">
    <defName>TA_Make_Tripod</defName>
    <label>make tripod</label>
    <description>Make a tripod.</description>
    <jobString>Making tripod.</jobString>
		<researchPrerequisite>Machining</researchPrerequisite>
		<workAmount>3000</workAmount>
		<unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<TA_Tripod>1</TA_Tripod>
		</products>
	</RecipeDef>

</Defs>